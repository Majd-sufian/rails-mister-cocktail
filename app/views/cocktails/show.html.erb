




<h1 class="text-center"><%= @cocktail.name %> <span class="badge badge-secondary text-underline">New</span></h1>

  <% if @cocktail.picture? %>
    <%= image_tag @cocktail.picture, width: 250, height: 300, crop: :fill  %>
  <% end %>

  <div class="pad10">
    <% if @cocktail.doses.empty? %>
    <p class="text-gray">
      No ingredients yet. Add yours!
    </p>
    <% else %>
    <h3> Ingredients: </h3>
      <% end %>
  </div>

  <ul class="list-unstyled pad20">
    <% @cocktail.doses.each do |d| %>
    <li>
      <i class="fa fa-glass"></i> <strong> <%= d.ingredient.name %> </strong>
    </li>
    <p class="pad10"><strong> <%= d.description %></p> </strong>
    <% end %>
  </ul>
  <br>
  <div class="pad20">
    <%= link_to "Delete", dose_path(@cocktail.doses), class: "btn btn-danger btn-xs", method: :delete  %>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary", id: "ingredient-add-button"%>
    <%= link_to "Go back", cocktails_path, class: "btn btn-warning" %>
  </div>
